#!/bin/sh
name='popt'
version='1.16'
sources=( "https://bitbucket.org/piotrkarbowski/better-initramfs/downloads/${name}-${version}.tar.gz" )
homepage='http://rpm5.org/'
license='MIT'

build_cmd="
    cd /source/${name}-${version} && \
    ./configure --prefix=/binit/prefix \
    --disable-nls && \
    make -j ${cores_num:-1} && \
    make install
"

fetch_source
install_source
build_source
