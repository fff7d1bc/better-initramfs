#!/bin/sh
name='mdadm'
version='3.2.3'
sources=( "http://www.kernel.org/pub/linux/utils/raid/$name/$name-$version.tar.xz" )
homepage='http://neil.brown.name/blog/mdadm'
license='GPLv2'

build_cmd="
	cd /source/${name}-${version} && \
	export LDFLAGS='-static' && \
	make CFLAGS='-Os -DUCLIBC -DHAVE_STDINT_H -pipe' CXFLAGS='$CFLAGS' CWFLAGS='-Wall' mdadm
"

deploy="/source/${name}-${version}/mdadm"

fetch_source
install_source
build_source
